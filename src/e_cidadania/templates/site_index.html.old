{% extends "base.html" %}
{% load i18n %}

{% block title %}{% trans "e-cidadania" %}{% endblock %}

{% block content %}

{% block centercol %}
    <div class="grid_11">

        <div>
            <p><img src="{{ STATIC_URL }}/assets/indextitle.png" /></p><br /><br />
            <p class="intro">
                {% trans "e-cidadania is a participative democracy tool for citizens. It has an advanced debate system, proposals, document versioning, and you can create specific spaces for every process, it has a lot of functions more but it's better that you try it by yourself." %}
            </p>
            <br />
            <span style="margin-left: 35%;"><img src="{{ STATIC_URL }}/assets/sep.png"/></span>
            <br />
        </div>

        {% if perms.news.add_post %}
            <div id="tools">
                <a href="{{ request.path}}news/add/">
                    <img src="{{ STATIC_URL }}/assets/icons/add16.png" alt="{% trans 'Add news' %}" title="{% trans 'Add news' %}"/>
                </a>
            </div>
        {% endif %}

        {% for news in publication %}
            {% if news.pub_index %}
                <div class="post">
                    {% if perms.news.edit_post %}
                        <div id="tools">
                            <a href="{{ request.path }}news/{{ news.id }}/edit/">
                                <img src="{{ STATIC_URL }}/assets/icons/edit16.png" alt="{% trans 'Edit' %}" title="{% trans 'Edit' %}"/>
                            </a>
                            {% if perms.news.delete_post %}
                                <a href="{{ request.path }}news/{{ news.id }}/delete/">
                                    <img src="{{ STATIC_URL }}/assets/icons/delete16.png" alt="{% trans 'Delete' %}" title="{% trans 'Delete' %}"/>
                                </a>
                            {% endif %}
                        </div>
                    {% endif %}
                    <h1><a href="{{ request.path }}news/{{ news.id }}">{{ news.post_title }}</a></h1>
                    <h4>{% trans "Written by" %} {{ news.author }} {% trans "on" %} {{ news.pub_date }} | {% trans "Tags" %}: {{ news.post_tags }}</h4>
                    <p>{{ news.post_message|safe }}</p>
                </div>
            {% endif %}
        {% empty %}
            <div class="post">
                <p>{% trans "Nothing published yet." %}</p>
            </div>
        {% endfor%}
    </div>

{% endblock %}

{% block rightcol%}
    <div class="grid_5">

        <div id="widget">
            <p><span style="font-size: 23px;">{% trans "What can you do with e-cidadania?" %}</span> <strong><a href="/about">{% trans "Discover it here" %}</a></strong></p>
        </div>

        <div id="widget">
            <p><a href="/spaces/add">{% trans "Create your own space" %}</a> {% trans "inside e-cidadania" %}</p>
        </div>

        <div id="widget">
            <h2>{% trans "Spaces list" %}</h2><br />
            <form method="get" action="/spaces/go/">{% csrf_token %}
                <select name="spaces">
                    {% for space in spaces %}
                        <option>{{ space.name }}</option>
                    {% empty %}
                        <option>{% trans "No spaces" %}</option>
                    {% endfor %}
                </select>
                <input type="submit" class="btn" value="{% trans 'Go' %}" />
            </form>
        </div>

        <div id="widget">
            <h2>{% trans "Recently added spaces" %}</h2><br />
            {% for recent in recent_spaces %}
                <a href="/spaces/{{ recent.url }}">{{ recent.name }}</a><br/>
            {% empty %}
                {% trans "No spaces have been added recently." %}
            {% endfor %}
        </div>

        <div id="widget">
            <h2>{% trans "Share" %}</h2><br />
            <script src="http://widgets.twimg.com/j/2/widget.js"></script>
            <script>
                new TWTR.Widget({
                    version: 2,
                    type: 'profile',
                    rpp: 5,
                    interval: 6000,
                    width: 'auto',
                    height: 300,
                    theme: {
                        shell: {
                            background: '#eaeaea',
                            color: '#666666'
                        },
                        tweets: {
                            background: '#ffffff',
                            color: '#000000',
                            links: '#666666'
                        }
                    },
                    features: {
                        scrollbar: false,
                        loop: false,
                        live: false,
                        hashtags: true,
                        timestamp: true,
                        avatars: false,
                        behavior: 'all'
                    }
                }).render().setUser('ecidadaniafloss').start();
            </script>

            <br />
            
            <!-- Facebook -->
            <div id="fb-root"></div>
            <script>(function(d, s, id) {
                var js, fjs = d.getElementsByTagName(s)[0];
                if (d.getElementById(id)) {return;}
                    js = d.createElement(s); js.id = id;
                    js.src = "//connect.facebook.net/es_ES/all.js#xfbml=1";
                    fjs.parentNode.insertBefore(js, fjs);
                    }(document, 'script', 'facebook-jssdk'));
            </script>
            <div style="float:left;" class="fb-like" data-href="http://ecidadania.org" data-send="false" data-layout="box_count" data-width="85" data-show-faces="false"></div>
            <!-- End Facebook -->                
            
            <!-- Google Plus -->
            <g:plusone size="tall" href="http://ecidadania.org"></g:plusone>
            <script type="text/javascript">
                window.___gcfg = {lang: 'es'};
                (function() {
                    var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
                    po.src = 'https://apis.google.com/js/plusone.js';
                    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
                })();
            </script>
            <!-- End Google Plus -->
                
            <!-- LinkedIn -->
            <script src="http://platform.linkedin.com/in.js" type="text/javascript"></script>
            <script type="IN/Share" data-url="http://ecidadania.org" data-counter="top"></script>
            <!-- End LinkedIn -->
                
            <!-- Identi.ca -->
            <div id="identishare" style="vertical-align: bottom;"></div>
            <script type="text/javascript" src="http://www.tildehash.com/identishare.php?style2&title='e-cidadania open source e-democracy platform'" defer="defer"></script>
            <!-- End Identi.ca -->

            <!-- Twitter -->
            <a href="https://twitter.com/ecidadaniafloss" class="twitter-share-button" date-url="http://ecidadania.org" data-counturl="http://ecidadania.org" data-count="vertical" data-lang="es">{% trans "Tweet" %}</a>
            <script src="//platform.twitter.com/widgets.js" type="text/javascript"></script><br /><br />
            <!-- End Twitter -->
                
            <!-- Tuenti -->
            <script type="text/javascript" src="http://widgets.tuenti.com/widgets.js"></script>
            <a href="http://www.tuenti.com/share" class="tuenti-share-button" icon-style="light" share-url="http://ecidadania.org"></a><br /><br />
            <!-- End Tuenti -->

            <a href="/rss/"><img src="{{ STATIC_URL }}/assets/logos/rss_logo.png" alt="Feed RSS"/></a>
            <p><br />{% trans "Your favourite social site isn't here? Tell us!" %}</p>
        </div>

        <div id="widget">
            <h2>{% trans "e-cidadania development" %}</h2><br />
            <p>{% trans "Do you want to help?" %} <a href="http://dev.ecidadania.org">{% trans "Access" %}</a></p>
        </div>
    </div>
    {% endblock %}

{% endblock %}

{% block footer %}
    <p>
    {% for p in page %}
        <a href="/{{ p.uri }}">{{ p.name }}</a> |
    {% endfor %}
    </p>
{% endblock %}

